<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            
<!-- creates a form for the user to add his information -->
            <form class="form" method="POST">

                <div class="form-group">
                    <label for="ProductIdTextField">Id</label>
                    <input type="text" class="form-control"
                    id="ProductIdTextField"
                    placeholder="Enter the Product ID"
                    name="Productid" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Product Name</label>
                    <input type="text" class="form-control"
                    id="ProductnameTextField"
                    placeholder="Enter the Product Name"
                    name="Productname" required>
                </div>

              

                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionTextField"
                    placeholder="Enter the Year of Publication"
                    name="Description" required>
                </div>

          

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Book's Price"
                    name="price" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/products" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>